@* Employee *@
@model O2GEN.Models.EmployeeModels.EmployeeListModel
@{
    ViewData["Title"] = "Работники";
}
<section class="component-section">

    <div class="row-container-left bg-blue">
        <ul class="ul-list-left-aligned">
            <li class="li-text-white">
                <button class="transparent-btn">
                    <i class="fa fa-plus color-white"></i>
                    <p class="color-white">
                        Создать
                    </p>
                </button>
            </li>

            <li class="li-text-white">
                <button class="transparent-btn">
                    <i class="fa fa-plus color-white"></i>
                    <p class="color-white">
                        Считать NFC карту
                    </p>
                </button>
            </li>
        </ul>
    </div>

    <div class="margin-between-above">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <p>
                            @Html.DisplayNameFor(x => x.EmployeeModels.FirstOrDefault().VisibleName)
                        </p>
                    </th>

                    <th>
                        <p>
                            @Html.DisplayNameFor(x => x.EmployeeModels.FirstOrDefault().Department)
                        </p>
                    </th>

                    <th>
                        <p>
                            @Html.DisplayNameFor(x => x.EmployeeModels.FirstOrDefault().UserType)
                        </p>
                    </th>

                    <th>
                        <p>
                            @Html.DisplayNameFor(x => x.EmployeeModels.FirstOrDefault().Edit)
                        </p>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EmployeeModels)
                {
                    <tr>
                        <td>
                            <p>
                                @item.VisibleName
                            </p>
                        </td>

                        <td>
                            <p>
                                @item.Department
                            </p>
                        </td>

                        <td>
                            <p>
                                @item.UserType
                            </p>
                        </td>

                        <td>
                            <div class="fa-container-links-centered">
                                <a href="#">
                                    <i class="fa fa-pen"></i>
                                </a>
                                <a href="#">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>

