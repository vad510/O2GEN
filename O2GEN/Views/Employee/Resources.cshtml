@model O2GEN.Models.EmployeeModels.ResourcesListModels
@{
    ViewData["Title"] = "Ресурсы";
}
<section class="component-section">

    <div class="row-container-left">
        <button class="transparent-btn">
            <i class="fa fa-plus color-white"></i>
            <p class="color-white">Создать</p>
        </button>
    </div>

    <div class="margin-between-above">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <p>
                            @Html.DisplayNameFor(x => x.ResourcesModels.FirstOrDefault().VisibleName)
                        </p>
                    </th>

                    <th>
                        <p>
                            @Html.DisplayNameFor(x => x.ResourcesModels.FirstOrDefault().Edit)
                        </p>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Resources)
                {
                    <tr>
                        <td>
                            <p>
                                @item.DisplayName
                            </p>
                        </td>

                        <td>
                            <div class="fa-container-links-centered">
                                <a href="#">
                                    <i class="fa fa-pen"></i>
                                </a>
                                <a href="#">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
