@model O2GEN.Models.Filter
@{
    ViewData["Title"] = "Должности";
}
<script type="text/javascript" src="~/js/ResourceEdit.js"></script>
<section class="component-section">

    <div id="placeholder"></div>
    <div class="row-container-left bg-blue">
        <form action="Resources" method="post">
            <ul class="ul-list-left-aligned">
                <li class="li-text-white">
                    <button type="button" class="btn btn-light" data-toggle="modal-toggler" data-target="#ResourceEdit" data-url="@Url.Action("ResourceCreate")">
                        <i class="fa fa-plus"></i> Создать
                    </button>
                </li>
                <li class="li-text-white">
                    <select asp-for="DepartmentId" class="form-control" required>
                        @if (Model.DepartmentId == null)
                        {
                            <option value="NULL" selected>Выбрать значение</option>
                        }
                        else
                        {
                            <option value="NULL">Выбрать значение</option>
                        }
                        @foreach (Department item in O2GEN.Helpers.DBHelper.GetChildDepartments())
                        {
                            @if (Model.DepartmentId == item.Id)
                            {
                                <option value="@item.Id" selected>@item.DisplayName</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.DisplayName</option>
                            }
                        }
                    </select>
                </li>
                <li class="li-text-white">
                    <button class="btn btn-light" type="submit">
                        <i class="fa fa-search"></i> Поиск
                    </button>
                </li>
            </ul>
        </form>
    </div>

    <div class="margin-between-above">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <p>
                            Отображаемое название
                        </p>
                    </th>
                    <th width="300">
                        <p class="text-center">
                            Изменить/Удалить
                        </p>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Resources)
                {
                    <tr>
                        <td>
                            <p>
                                @item.DisplayName
                            </p>
                        </td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-info mr-1" data-toggle="modal-toggler" data-target="#ResourceEdit" data-url="@Url.Action("ResourceEdit", new { id = item.Id })">
                                    <i class="fa fa-pen"></i>
                                </button>
                                @*<button type="submit" class="btn btn-danger ml-1" onclick="location.href='@Url.Action("ResourceDelete", new { id = item.Id })'">
                                    <i class="fa fa-trash"></i>
                                </button>*@
                                <button type="submit" class="btn btn-danger ml-1" onclick="changesModalShow('@Url.Action("ResourceDelete", new { id = item.Id })', 'Удаление', 'Вы действительно хотите удалить запись?');">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script type="text/javascript">

        function GetEngineersByDept(SelectedObj, elem) {
            if (SelectedObj != 'undefined') {
                $.ajax({
                    method: "GET",
                    url: "GetEngineersByDept",
                    dataType: "json",
                    data: {
                        "DeptId": SelectedObj.value
                    },
                    success: function (data) {
                        var s = '';
                        for (var i = 0; i < data.length; i++) {
                            s += '<option value="' + data[i].id + '">' + data[i].displayName + '</option>';
                        }
                        $(elem).html(s);
                    }
                })
            }
        }
        function DeptChanged(SelectedObj) {
            $("#Selected").html('');
            $("#SelectList1").html('');
            $("#SelectList2").html('');
            GetEngineersByDept(SelectedObj,'#SelectList1');
        }
    </script>
</section>
