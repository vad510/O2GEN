@* Employee *@
@{
    ViewData["Title"] = "Работники";
}
@using O2GEN.Helpers



<section class="component-section">

    <div id="placeholder"></div>
    <div class="row-container-left bg-blue">
        <ul class="ul-list-left-aligned">
            <li class="li-text-white">
                <button type="button" class="transparent-btn" data-toggle="modal-toggler" data-target="#EngineerEdit" data-url="@Url.Action("EngineerCreate")">
                    <i class="fa fa-plus color-white"></i>
                    <p class="color-white">Создать</p>
                </button>
            </li>

            <li class="li-text-white">
                <button class="transparent-btn">
                    <i class="fa fa-plus color-white"></i>
                    <p class="color-white">
                        Считать NFC карту
                    </p>
                </button>
            </li>
        </ul>
    </div>

    <div class="margin-between-above">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <p>
                            Отображаемое название
                        </p>
                    </th>

                    <th>
                        <p>
                            Подразделение
                        </p>
                    </th>

                    <th>
                        <p>
                            Пользователь
                        </p>
                    </th>

                    <th>
                        <p>

                        </p>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Engineers)
                {
                    <tr>
                        <td>
                            <p>
                                @item.PersonName
                            </p>
                        </td>

                        <td>
                            <p>
                                @item.DepartmentName
                            </p>
                        </td>

                        <td>
                            <p>
                                @item.IsUser
                            </p>
                        </td>

                        <td>
                            <div>
                                <button type="button" class="transparent-btn" data-toggle="modal-toggler" data-target="#EngineerEdit" data-url="@Url.Action("EngineerEdit", new { id = item.Id })">
                                    <i class="fa fa-pen"></i>
                                </button>

                                <a href="@Url.Action("EngineerDelete", new { id = item.Id })">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>

