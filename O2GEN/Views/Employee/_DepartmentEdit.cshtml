@model O2GEN.Models.EmployeeModels.DepartmentHeadModel


<div class="modal fade" id="departmentEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row-container">
                    <form action="UpdateDepartment">
                        <div class="form-group">

                            <div class="margin-between-above">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control"/>
                                <span></span>
                            </div>

                            <div class="margin-between-above">
                                <label asp-for="DisplayName"></label>
                                <input asp-for="DisplayName" class="form-control"/>
                                <span></span>
                            </div>

                            <div class="margin-between-above">
                                <label asp-for="ParentArea"></label>
                                <select class="form-control">
                                    <option>1</option>
                                    <option>1</option>
                                    <option>1</option>
                                </select>
                                <span></span>
                            </div>

                            <div class="margin-between-above">
                                <label asp-for="Organization"></label>
                                <input asp-for="Organization" class="form-control"/>
                                <span></span>
                            </div>

                            <div class="margin-between-above">
                                <label asp-for="Latitude"></label>
                                <input asp-for="Latitude" class="form-control"/>
                                <span></span>
                            </div>

                            <div class="margin-between-above">
                                <label asp-for="Longitude"></label>
                                <input asp-for="Longitude" class="form-control"/>
                                <span></span>
                            </div>

                            <div class="margin-between-above">
                                <label asp-for="TimeZone"></label>
                                <input asp-for="TimeZone" class="form-control"/>
                                <span></span>
                            </div>

                            <div class="margin-between-above">
                                <label asp-for="ShortCode"></label>
                                <input asp-for="ShortCode" class="form-control"/>
                                <span></span>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-outline-primary" data-save="modal">Применить</button>
            </div>
        </div>
    </div>
</div>