@model O2GEN.Models.ZRP

<div class="modal fade" id="ZRPEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @if (Model.Id == -1)
                {
                    <h5>Новая запись</h5>
                }
                else
                {
                    <h5>Обход #@Model.Id</h5>
                }
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs top-margin">
                    <li class="nav-item active">
                        <a class="nav-link text-black-50 active" href="#major-tab" data-toggle="tab">Основные</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black-50" href="#techpos-tab" data-toggle="tab">Тех. позиции</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black-50" href="#defect-tab" data-toggle="tab">Дефекты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black-50" href="#attachment-tab" data-toggle="tab">Вложения</a>
                    </li>
                </ul>

                <div class="tab-content bg-light">

                    <div id="major-tab" class="tab-pane active">
                        <div class="row-container color-black">

                            <div class="row-div-two">
                                <form action="CreateZpr">
                                    <div class="form-group">

                                        <div class="margin-between-above">
                                            <label asp-for="RouteName"></label>
                                            <input asp-for="RouteName" class="form-control" />
                                            <span asp-validation-for="RouteName" class="text-danger"></span>
                                        </div>

                                        <div class="margin-between-above">
                                            <label asp-for="TypeId"></label>
                                            <select asp-for="TypeId" class="form-control">
                                                @foreach (SCTypes item in O2GEN.Helpers.DBHelper.GetSCTypes())
                                                {
                                                    <option value="@item.Id">@item.DisplayName</option>
                                                }
                                            </select>
                                        </div>

                                        <div class="margin-between-above">
                                            <label asp-for="StartTime"></label>
                                            <input asp-for="StartTime" class="form-control" />
                                        </div>


                                        <div class="margin-between-above">
                                            <label asp-for="ResourceId"></label>
                                            <select asp-for="ResourceId" class="form-control">
                                                @foreach (Resource item in O2GEN.Helpers.DBHelper.GetResources())
                                                {
                                                    <option value="@item.Id">@item.DisplayName</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="row-div-two">
                                <div class="margin-between-above">
                                    <label asp-for="StatusId"></label>
                                    <select asp-for="StatusId" class="form-control">
                                        @foreach (SCStatus item in O2GEN.Helpers.DBHelper.GetSCStatuses())
                                        {
                                            <option value="@item.Id">@item.DisplayName</option>
                                        }
                                    </select>
                                </div>

                                <div class="margin-between-above">
                                    <label asp-for="DepartmentID"></label>
                                    <select asp-for="DepartmentID" class="form-control">
                                        @foreach (Department item in O2GEN.Helpers.DBHelper.GetChildDepartments())
                                        {
                                            <option value="@item.Id">@item.DisplayName</option>
                                        }
                                    </select>
                                </div>

                                <div class="margin-between-above">
                                    <label asp-for="EndTime"></label>
                                    <input asp-for="EndTime" class="form-control" />
                                </div>
                            </div>
                        </div>

                    </div>

                    <div id="techpos-tab" class="tab-pane">
                        <div class="row-container-left">
                            <button class="btn btn-outline-primary margin-around">Добавить</button>
                            <button class="btn btn-outline-primary margin-around">Развернуть всё</button>
                            <button class="btn btn-outline-primary margin-around">Свернуть всё</button>
                        </div>
                        <div class="margin-between-above">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            <p>
                                                Тех.позиция
                                            </p>
                                        </th>

                                        <th>
                                            <p>
                                                
                                            </p>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>

                    <div id="defect-tab" class="tab-pane">

                        <div class="margin-between-above">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            <p>Тех.Позиция</p>
                                        </th>

                                        <th>
                                            <p>Узел</p>
                                        </th>

                                        <th>
                                            <p>Контроль</p>
                                        </th>

                                        <th>
                                            <p>Значение</p>
                                        </th>

                                        <th>
                                            <p>Дефект обнаружил</p>
                                        </th>

                                        <th>
                                            <p>Дефект обработал</p>
                                        </th>

                                        <th>
                                            <p>Время обнаружения</p>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>

                    <div id="attachment-tab" class="tab-pane">

                        <div class="margin-between-above">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            <p>Тех.Позиция</p>
                                        </th>

                                        <th>
                                            <p>Узел</p>
                                        </th>

                                        <th>
                                            <p>Контроль</p>
                                        </th>

                                        <th>
                                            <p>Время создания вложения</p>
                                        </th>

                                        <th>
                                            <p>Вложение</p>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-outline-primary">Применить</button>
            </div>
        </div>
    </div>
</div>