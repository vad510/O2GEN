@model O2GEN.Models.DeskModels.RouteListModel
@{
    ViewData["Title"] = "Маршруты";
}
<section class="component-section">

    <div id="placeholder"></div>
    <div class="row-container-left bg-blue with-padding">
        <button type="button" class="transparent-btn" data-toggle="modal-toggler" data-target="#RouteEdit" data-url="@Url.Action("RouteCreate")">
            <i class="fa fa-plus color-white"></i>
            <p class="color-white">Создать</p>
        </button>
    </div>

    <div class="margin-between-above">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <p>
                            Отображаемое название
                        </p>
                    </th>

                    <th>
                        <p>
                            Подразделение
                        </p>
                    </th>

                    <th width="300">
                        <p class="text-center">
                            Изменить/Удалить
                        </p>
                    </th>

                </tr>

            </thead>
            <tbody>
                @foreach (var item in ViewBag.Routes)
                {
                <tr>

                    <td>
                        <p>
                            @item.DisplayName
                        </p>
                    </td>

                    <td>
                        <p>
                            @item.DepartmentName
                        </p>
                    </td>


                    <td>
                        <div class="d-flex justify-content-center">
                            <button type="button" class="btn btn-info mr-1" data-toggle="modal-toggler" data-target="#RouteEdit" data-url="@Url.Action("RouteEdit", new { id = item.Id })">
                                <i class="fa fa-pen"></i>
                            </button>
                            <button type="submit" class="btn btn-danger ml-1" data-url="@Url.Action("RouteDelete", new { id = item.Id })">
                                <i class="fa fa-trash"></i>
                            </button>
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>

</section>