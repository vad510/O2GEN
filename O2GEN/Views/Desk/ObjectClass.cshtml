@model O2GEN.Models.AssetClassFilter
@{
    ViewData["Title"] = "Классы объектов";
}
<section class="component-section">

    <div id="placeholder"></div>
    <div class="row-container-left bg-blue" id="pageToolbar" style="position:sticky">
        <form action="ObjectClass" method="post">
            <ul class="ul-list-left-aligned">
                <li class="li-text-white">
                    <button type="button" class="btn btn-light" data-toggle="modal-toggler" data-target="#ObjectEdit" data-url="@Url.Action("ObjectClassCreate")">
                        <i class="fa fa-plus"></i> Создать
                    </button>
                </li>
                <li>
                    <input asp-for="DisplayName" class="form-control" placeholder="Название" />
                </li>
                <li class="li-text-white">
                    <button class="btn btn-light" type="submit">
                        <i class="fa fa-search"></i> Поиск
                    </button>
                </li>
            </ul>
        </form>
    </div>

    <div class="margin-between-above">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <p>
                            Отображаемое название
                        </p>
                    </th>

                    <th width="300">
                        <p class="text-center">
                            Изменить/Удалить
                        </p>
                    </th>

                </tr>

            </thead>
            <tbody>
                @foreach (var item in ViewBag.Data)
                {
                    <tr>

                        <td>
                            <p>
                                @item.DisplayName
                            </p>
                        </td>

                        <td>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-info mr-1" data-toggle="modal-toggler" data-target="#ObjectClassEdit" data-url="@Url.Action("ObjectClassEdit", new { id = item.Id })">
                                    <i class="fa fa-pen"></i>
                                </button>

                                @*<button type="submit" class="btn btn-danger ml-1" onclick="location.href='@Url.Action("ObjectClassDelete", new { id = item.Id })'">
                                    <i class="fa fa-trash"></i>
                                </button>*@
                                <button type="submit" class="btn btn-danger ml-1" onclick="changesModalShow('@Url.Action("ObjectClassDelete", new { id = item.Id })', 'Удаление', 'Вы действительно хотите удалить запись?');">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</section>