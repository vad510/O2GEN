@model O2GEN.Models.Asset

<div class="modal fade" id="ObjectEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                @if (Model.Id == -1)
                {
                    <h5>Новая запись</h5>
                }
                else
                {
                    <h5>Изменить запись №@Model.Id</h5>
                }
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <form action="ObjectUpdate" method="post">
                <div class="modal-body">
                    @Html.Hidden("Id", Model.Id)
                    @Html.Hidden("ObjectUID", Model.ObjectUID)
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="AssetSortId"></label>
                            <select asp-for="AssetSortId" class="form-control" required>
                                <option value="NULL" selected disabled>Выбрать значение</option>
                                @foreach (AssetSort item in O2GEN.Helpers.DBHelper.GetAssetSorts())
                                {
                                    <option value="@item.Id">@item.DisplayName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentId"></label>
                            <select asp-for="DepartmentId" class="form-control" required>
                                <option value="NULL" selected disabled>Выбрать значение</option>
                                @foreach (Department item in O2GEN.Helpers.DBHelper.GetChildDepartments())
                                {
                                    <option value="@item.Id">@item.DisplayName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DisplayName"></label>
                            <input asp-for="DisplayName" class="form-control" required />
                        </div>
                        <div class="form-group">
                            @{#warning Обязательный для узла }
                            <label asp-for="AssetClassId"></label>
                            <select asp-for="AssetClassId" class="form-control">
                                <option value="NULL" disabled selected>Выбрать значение</option>
                                @foreach (AssetClass item in O2GEN.Helpers.DBHelper.GetAssetClasses())
                                {
                                    <option value="@item.Id">@item.DisplayName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="ParentId"></label>
                            <select asp-for="ParentId" class="form-control">
                                @{#warning Вставляем список параметров с типом Тех. позиция }
                                @{#warning Обязательный для узла }
                                <option value="NULL">??</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Maximo"></label>
                            <input asp-for="Maximo" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Применить</button>
                </div>
            </form>
        </div>
    </div>
</div>