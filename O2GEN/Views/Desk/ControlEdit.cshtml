@model O2GEN.Models.Control

<div class="modal fade" id="ControlEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <form action="ControlUpdate" method="post">
                <div class="modal-header">
                    @if (Model.Id == -1)
                    {
                        <h5>Новая запись</h5>
                    }
                    else
                    {
                        <h5>Изменить запись №@Model.Id</h5>
                    }
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">

                    <div class="tab-content bg-light">

                        <div id="major-tab" class="tab-pane active">
                            <div class="row-container color-black">

                                <div class="row-div-two">
                                    <div class="form-group">
                                        @Html.Hidden("Id", Model.Id)
                                        @Html.Hidden("ObjectUID", Model.ObjectUID)
                                        <div class="margin-between-above">
                                            <label asp-for="DisplayName"></label>
                                            <input asp-for="DisplayName" class="form-control" />
                                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                                        </div>
                                        <div class="margin-between-above">
                                            <label asp-for="ValueType"></label>
                                            <select asp-for="ValueType" class="form-control">
                                                <option value="0">@O2GEN.Helpers.DBHelper.GetControlTypeDisplay(0)</option>
                                                <option value="1">@O2GEN.Helpers.DBHelper.GetControlTypeDisplay(1)</option>
                                                <option value="2">@O2GEN.Helpers.DBHelper.GetControlTypeDisplay(2)</option>
                                            </select>
                                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                                        </div>

                                        <label>Уставки</label>

                                        <label>Норма</label>
                                        <div class="margin-between-above">
                                            <label asp-for="ValueBottom1"></label>
                                            <input asp-for="ValueBottom1" class="form-control" />
                                        </div>
                                        <div class="margin-between-above">
                                            <label asp-for="ValueTop1"></label>
                                            <input asp-for="ValueTop1" class="form-control" />
                                        </div>
                                        <label>Отклонение:</label>
                                        <div class="margin-between-above">
                                            <label asp-for="ValueBottom2"></label>
                                            <input asp-for="ValueBottom2" class="form-control" />
                                        </div>
                                        <div class="margin-between-above">
                                            <label asp-for="ValueTop2"></label>
                                            <input asp-for="ValueTop2" class="form-control" />
                                        </div>
                                        <label>Сильное отклонение:</label>
                                        <div class="margin-between-above">
                                            <label asp-for="ValueBottom3"></label>
                                            <input asp-for="ValueBottom3" class="form-control" />
                                        </div>
                                        <div class="margin-between-above">
                                            <label asp-for="ValueTop3"></label>
                                            <input asp-for="ValueTop3" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-outline-primary">Применить</button>
                </div>
            </form>
        </div>
    </div>
</div>